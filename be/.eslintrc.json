{
    "env": {
      "jest/globals": true,
      "commonjs": true,
      "node": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "plugins": ["prettier", "jest"],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "func-names": "off",
      "no-plusplus": "off",
      "no-process-exit": "off",
      "class-methods-use-this": "off"
    }
  }